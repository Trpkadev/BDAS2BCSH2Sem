@using BCSH2BDAS2.Helpers
@using BCSH2BDAS2.Models
@model (IEnumerable<BCSH2BDAS2.Models.Pracovnik> pracovnici,IEnumerable<BCSH2BDAS2.Models.Role> role)
@{
    ViewData["Title"] = "Seznam pracovníků";
}


<div class="d-flex justify-content-between mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Vytvořit nového</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().UzivatelskeJmeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().Nadrizeny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().Role.Nazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().HodinovaMzda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().Jmeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().Prijmeni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().TelefonniCislo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pracovnici.First().Email)
            </th>
            <th></th>
            @if (((IUser?)ViewData["ActingUser"])?.HasAdminRights() == true)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var pracovnik in Model.pracovnici)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.UzivatelskeJmeno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.Nadrizeny.ToString())
                </td>
                <td>
                    @Html.DropDownListFor(modelItem => pracovnik.IdRole,
                             new SelectList(Model.role.Where(role => role.Prava > 0).Select(role => new
                             {
                                 Value = role.IdRole,
                                 Text = role.ToString()
                             }), "Value", "Text", pracovnik.IdRole),
                             new { @class = "form-control", @onchange = $"submitRoleChange(this, {pracovnik.IdPracovnik},'{pracovnik.Jmeno}','{pracovnik.Heslo}')" })

                </td>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.HodinovaMzda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.Jmeno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.Prijmeni)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.TelefonniCislo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => pracovnik.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(pracovnik.IdPracovnik)" class="btn btn-danger">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(pracovnik.IdPracovnik)" class="btn btn-danger">Delete</a>
                </td>
                @if (((IUser?)ViewData["ActingUser"])?.HasAdminRights() == true)
                {
                    <td>
                        <a asp-action="ActBehalf" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(pracovnik.IdPracovnik)" class="btn btn-secondary">Přepnout na</a>
                    </td>
                }
            </tr>
            @Html.HiddenFor(modelItem => pracovnik.IdPracovnik)
            @Html.HiddenFor(modelItem => pracovnik.Heslo)
        }
    </tbody>
</table>

<script type="text/javascript">
        function submitRoleChange(dropdown, id, jmeno, heslo) {
        var selectedRoleId = dropdown.value;
        var uzivatel = {
            idUzivatel: id,
            idRole: selectedRoleId,
            jmeno: jmeno,
            heslo: heslo
        };

        $.ajax({
            type: "POST",
            url: "/Users/EditSubmit",
            contentType: "application/json",
            data: JSON.stringify(uzivatel),
            success: function(response) {
                alert("Role updated successfully!");
            },
            error: function(xhr, status, error) {
                console.log(xhr.responseText);
                alert("Error: " + xhr.responseText);
            }
        });
    }
</script>
