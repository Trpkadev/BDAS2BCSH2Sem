@using BCSH2BDAS2.Helpers
@using BCSH2BDAS2.Models
@model IEnumerable<BCSH2BDAS2.Models.Pracovnik>
@{
    ViewData["Title"] = "Seznam pracovníků";
}

@await Html.PartialAsync("IndexCreateTitle")
<div class="table-responsive overflow-auto">
    <table class="table text-nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UzivatelskeJmeno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nadrizeny)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HodinovaMzda)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jmeno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijmeni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelefonniCislo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
                @if (((IUser?)ViewData["ActingUser"])?.HasAdminRights() == true)
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UzivatelskeJmeno)
                    </td>
                    <td>

                        <a asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdNadrizeny)" class="btn btn-secondary">@Html.DisplayFor(modelItem => item.Nadrizeny)</a>
                    </td>
                    <td>
                        @Html.DropDownListFor(modelItem => item.IdRole,
                                 new SelectList(((IEnumerable<Role>?)ViewData["Role"])?.Where(role => role.Prava > 0).Select(role => new
                                 {
                                     Value = role.IdRole,
                                     Text = role.ToString()
                                 }), "Value", "Text", item.IdRole),
                                 new { @class = "form-control" })

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HodinovaMzda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jmeno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prijmeni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefonniCislo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    @await Html.PartialAsync("IndexActionButtons", item.IdPracovnik)
                    @if (((IUser?)ViewData["ActingUser"])?.HasAdminRights() == true)
                    {
                        <td>
                            <a asp-action="ActBehalf" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdPracovnik)" class="btn btn-secondary">Přepnout na</a>
                        </td>
                    }
                </tr>
                @Html.HiddenFor(modelItem => item.IdPracovnik)
                @Html.HiddenFor(modelItem => item.Heslo)
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
        function submitRoleChange(dropdown, id, jmeno, heslo) {
        var selectedRoleId = dropdown.value;
        var uzivatel = {
            idUzivatel: id,
            idRole: selectedRoleId,
            jmeno: jmeno,
            heslo: heslo
        };

        $.ajax({
            type: "POST",
            url: "/Users/EditSubmit",
            contentType: "application/json",
            data: JSON.stringify(uzivatel),
            success: function(response) {
                alert("Role updated successfully!");
            },
            error: function(xhr, status, error) {
                console.log(xhr.responseText);
                alert("Error: " + xhr.responseText);
            }
        });
    }
</script>
