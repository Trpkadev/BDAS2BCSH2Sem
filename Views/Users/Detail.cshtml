@using BCSH2BDAS2.Helpers
@model BCSH2BDAS2.Models.Uzivatel
@{
    ViewData["Title"] = "Detail uživatele";
}

<h1>@ViewData["Title"]</h1>

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.UzivatelskeJmeno)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.UzivatelskeJmeno)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.NazevRole)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.NazevRole)</dd>
            </dl>

            <div class="row-cols-3 row-gap-3">
                <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(Model.IdUzivatel)" class="btn btn-danger col-auto">Odstranit</a>
                <a asp-action="Index" class="btn btn-secondary col-auto" style="margin-left:1rem">Zpět na seznam</a>
            </div>
        </div>
    </div>
</div>