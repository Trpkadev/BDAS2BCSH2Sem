@using BCSH2BDAS2.Helpers
@using BCSH2BDAS2.Models
@model IEnumerable<BCSH2BDAS2.Models.Uzivatel>
@{
    ViewData["Title"] = "AdminPanel";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jmeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleNazev)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Jmeno)
                </td>
                <td>
                    @Html.DropDownListFor(modelItem => item.IdRole,
                             new SelectList(Enum.GetValues(typeof(Role)).Cast<Role>().Where(role => role > 0).Select(role => new
                             {
                                 Value = (int)role,
                                 Text = role.ToString()
                             }), "Value", "Text", item.IdRole),
                             new { @class = "form-control" })
                </td>
                <td>
                    <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdUzivatel)" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a asp-action="ActBehalf" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdUzivatel)" class="btn btn-secondary">Přepnout na</a>
                </td>
            </tr>
        }
    </tbody>
</table>
