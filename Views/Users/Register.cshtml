@model BCSH2BDAS2.Models.Uzivatel
@{
    ViewData["Title"] = "Registrace";
}

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">@ViewData["Title"]</h3>
            <form asp-action="RegisterSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UzivatelskeJmeno" class="control-label">Uživatelské jméno</label>
                    <input asp-for="UzivatelskeJmeno" class="form-control" />
                    <span asp-validation-for="UzivatelskeJmeno" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Heslo" class="control-label">Heslo</label>
                    <input asp-for="Heslo" class="form-control" type="password" />
                    <span asp-validation-for="Heslo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Zaregistrovat se" class="btn btn-primary" />
                </div>

                <div class="text-center mt-3">
                    <a asp-controller="Users" asp-action="Login">Už máte účet? Přihlaste se.</a>
                </div>
            </form>
        </div>
    </div>
</div>