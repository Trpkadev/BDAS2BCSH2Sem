@using BCSH2BDAS2.Helpers
@model BCSH2BDAS2.Models.Vozidlo
@{
    ViewData["Title"] = "Odstranit";
}

<h3>Opravdu chcete tuto položku odstranit?</h3>

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.SPZ)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.SPZ)</dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.RokVyroby)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.RokVyroby)</dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.NajeteKilometry)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.NajeteKilometry)</dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.Kapacita)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.Kapacita)</dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.MaKlimatizaci)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.MaKlimatizaci)</dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.NazevGaraze)</dt>
                <dd class="col-auto p-1">
                    <a asp-controller="Garages" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(Model.IdGaraz)">@Html.DisplayFor(model => model.NazevGaraze)</a>
                </dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.NazevModelu)</dt>
                <dd class="col-auto p-1">
                    <a asp-controller="Models" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(Model.IdModel)">@Html.DisplayFor(model => model.NazevModelu)</a>
                </dd>
            </dl>

            <form asp-action="DeleteSubmit" class="row m-1">
                @Html.HiddenFor(model => model.IdVozidlo)
                <input type="submit" value="Odstranit" class="btn btn-danger col-auto" />
                <div class="col w-100"></div>
                <a asp-action="Index" class="btn btn-secondary col-auto align-content-end">Zpět na seznam</a>
            </form>
        </div>
    </div>
</div>
