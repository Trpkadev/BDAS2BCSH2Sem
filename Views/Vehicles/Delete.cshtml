}

<h3>Opravdu chcete tuto položku odstranit?</h3>

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row m-0">
                <dt class="col-auto p-1">
                    @Html.DisplayNameFor(model => model.RokVyroby)
                </dt>
                <dd class="col-auto p-1">
                    @Html.DisplayFor(model => model.RokVyroby)
                </dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">
                    @Html.DisplayNameFor(model => model.NajeteKilometry)
                </dt>
                <dd class="col-auto p-1">
                    @Html.DisplayFor(model => model.NajeteKilometry)
                </dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">
                    @Html.DisplayNameFor(model => model.Kapacita)
                </dt>
                <dd class="col-auto p-1">
                    @Html.DisplayFor(model => model.Kapacita)
                </dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">
                    @Html.DisplayNameFor(model => model.MaKlimatizaci)
                </dt>
                <dd class="col-auto p-1">
                    @Html.DisplayFor(model => model.MaKlimatizaci)
                </dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">
                    @Html.DisplayNameFor(model => model.IdGaraz)
                </dt>
                <dd class="col-auto p-1">
                    @Html.DisplayFor(model => model.IdGaraz)
