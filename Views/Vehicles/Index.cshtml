@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.Vozidlo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RokVyroby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NajeteKilometry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kapacita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKlimatizaci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GarazNazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelNazev)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RokVyroby)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NajeteKilometry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kapacita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKlimatizaci)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GarazNazev)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelNazev)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdVozidlo)">Edit</a> |
                    <a asp-action="Details" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdVozidlo)">Details</a> |
                    <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdVozidlo)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
