@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.Role>
@{
    ViewData["Title"] = "Seznam rolí";
}

@await Html.PartialAsync("IndexCreateTitle")
<div class="table-responsive overflow-auto p-3">
    <table class="table text-nowrap w-auto m-auto">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nazev)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prava)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_ => item.Nazev)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Prava)
                    </td>
                    @await Html.PartialAsync("IndexActionButtons", item.IdRole)
                </tr>
            }
        </tbody>
    </table>
</div>