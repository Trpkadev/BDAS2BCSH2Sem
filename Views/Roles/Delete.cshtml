@model BCSH2BDAS2.Models.Role
@{
    ViewData["Title"] = "Odstranit";
}

<h3>Opravdu chcete tuto položku odstranit?</h3>

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.Nazev)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.Nazev)</dd>
            </dl>

            <dl class="row m-0">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.Prava)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.Prava)</dd>
            </dl>

            <form asp-action="DeleteSubmit" class="row m-1">
                @Html.HiddenFor(model => model.IdRole)
                <input type="submit" value="Odstranit" class="btn btn-danger col-auto" />
                <div class="col w-100"></div>
                <a asp-action="Index" class="btn btn-secondary col align-content-end">Zpět na seznam</a>
            </form>
        </div>
    </div>
</div>