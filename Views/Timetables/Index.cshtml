@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.JizdniRad>
@{
    ViewData["Title"] = "Seznam jízdních řádů";
}

@await Html.PartialAsync("IndexCreateTitle")
<div class="table-responsive overflow-auto p-3">
    <table class="table text-nowrap w-auto m-auto">
        <thead>
            <tr>
                <th>
                    Spoj
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ZastavkaNazev)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CasPrijezdu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CasOdjezdu)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Connections" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdSpoj)">Spoj</a>
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.ZastavkaNazev)
                    </td>
                    <td>
                        @((item.CasPrijezdu ?? item.CasOdjezdu).ToShortTimeString())
                    </td>
                    <td>
                        @item.CasOdjezdu.ToShortTimeString()
                    </td>

                    @await Html.PartialAsync("IndexActionButtons", item.IdJizdniRad)
                </tr>
            }
        </tbody>
    </table>
</div>