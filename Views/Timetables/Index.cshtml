@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.JizniRad>

@{
    ViewData["Title"] = "Seznam jízdních řádů";
}

<div class="d-flex justify-content-between mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Vytvořit</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.IdSpoj) *@
                Spoj
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZastavkaNazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CasPrijezdu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CasOdjezdu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
					<a asp-controller="Connections" asp-action="Edit" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdSpoj)">Spoj</a>
                    @* @Html.DisplayFor(_ => item.IdSpoj) *@
                </td>
                <td>
                    @Html.DisplayFor(_ => item.ZastavkaNazev)
                </td>
                @* TODO Editable Field *@
                <td>
                    @((item.CasPrijezdu ?? item.CasOdjezdu).ToShortTimeString())
                </td>
                <td>
                    @item.CasOdjezdu.ToShortTimeString()
                </td>
                @* TODO
                    <td>
                    <a asp-action="Edit" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdJizdniRad)" class="btn btn-secondary">Upravit</a>
                    <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdJizdniRad)" class="btn btn-secondary">Odstranit</a>
                </td> 
                *@
            </tr>
        }
    </tbody>
</table>