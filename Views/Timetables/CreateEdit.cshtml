@model BCSH2BDAS2.Models.JizdniRad
@{
    ViewData["Title"] = "Vytvořit/Upravit jízdní řád";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateEditSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdJizdniRad" />

                <div class="form-group mb-3">
                    <label asp-for="NazevZastavky" class="control-label"></label>
                    @Html.DropDownList("IdZastavka", (SelectList)ViewBag.Zastavky, new { @class = "form-control" })
                    <span asp-validation-for="IdZastavka" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdSpoj" class="control-label"></label>
                    @Html.DropDownList("IdSpoj", (SelectList)ViewBag.Spoje, new { @class = "form-control" })
                    <span asp-validation-for="IdSpoj" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CasPrijezdu" class="control-label"></label>
                    <input asp-for="CasPrijezdu" class="form-control" />
                    <span asp-validation-for="CasPrijezdu" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CasOdjezdu" class="control-label"></label>
                    <input asp-for="CasOdjezdu" class="form-control" />
                    <span asp-validation-for="CasOdjezdu" class="text-danger"></span>
                </div>

                <div class="form-group row m-1">
                    <input type="submit" value="Uložit změny" class="btn btn-primary col" />
                    <div class="col w-100"></div>
                    <a asp-action="Index" class="btn btn-secondary col align-content-end" style="margin-left:1rem">Zpět na seznam</a>
                </div>
            </form>
        </div>
    </div>
</div>