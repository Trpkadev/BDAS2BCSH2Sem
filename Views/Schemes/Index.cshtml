@using BCSH2BDAS2.Helpers
@using BCSH2BDAS2.Models
@model IEnumerable<BCSH2BDAS2.Models.Schema>
@{
    ViewData["Title"] = "Seznam schémat";
}

@await Html.PartialAsync("IndexCreateTitle")

<div class="container mt-4">
    <ul class="nav nav-tabs">
        @{
            for (int i = 0; i < Model.Count(); i++)
            {
                var activeClass = i == 0 ? "nav-link active" : "nav-link";
                <li class="nav-item">
                    <a class="@activeClass" data-bs-toggle="tab" href="#tab1">@Model.ElementAt(i).NazevSchematu</a>
                </li>
            }
            @if (((IUser?)ViewData["ActingUser"])?.HasManagerRights() == true || ((IUser?)ViewData["ActingUser"])?.HasDispatchRights() == true)
            {
                var activeClass = Model.Count() == 0 ? "nav-link active" : "nav-link";
                <li class="nav-item">
                    <a class="@activeClass" data-bs-toggle="tab" href="#tabTable">Table</a>
                </li>
            }
        }
    </ul>

    <div class="tab-content">
        @{
            @for (int i = 0; i < Model.Count(); i++)
            {
                var schema = Model.ElementAt(i);
                if (schema.Soubor == null)
                    continue;
                var activeClass = i == 0 ? "tab-pane fade show active" : "tab-pane fade";
                <div id="tab@i" class="@activeClass">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(schema.Soubor)" />
                    <p>@schema.NazevSouboru</p>
                    <p>@schema.VelikostSouboru</p>
                    <p>@schema.DatumZmeny</p>
                </div>
            }
        }

        @if (((IUser?)ViewData["ActingUser"])?.HasManagerRights() == true || ((IUser?)ViewData["ActingUser"])?.HasDispatchRights() == true)
        {
            var activeClass = Model.Count() == 0 ? "tab-pane fade show active" : "tab-pane fade";
            <div id="tabTable" class="@activeClass">
                <div class="table-responsive overflow-auto p-3">
                    <table class="table text-nowrap w-auto m-auto">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NazevSchematu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VelikostSouboru)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Soubor)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(_ => item.NazevSchematu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(_ => item.VelikostSouboru)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(_ => item.Soubor)
                                    </td>

                                    @await Html.PartialAsync("IndexActionButtons", item.IdSchema)
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        }
    </div>
</div>