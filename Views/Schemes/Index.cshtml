@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.Schema>

@{
    ViewData["Title"] = "Seznam schémat";
}

<div class="d-flex justify-content-between mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Vytvořit</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazevSchematu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VelikostSouboru)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soubor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(_ => item.NazevSchematu)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.VelikostSouboru)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.Soubor)
                </td>
                <td class="d-flex">
                    <a asp-action="Edit" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdSchema)" class="btn btn-secondary">Upravit</a>
                    <a asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdSchema)" class="btn btn-secondary">Detail</a>
                    <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdSchema)" class="btn btn-secondary">Odstranit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
