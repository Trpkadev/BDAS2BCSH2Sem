@model BCSH2BDAS2.Models.Schema
@{
    ViewData["Title"] = "Vytvořit/Upravit schéma";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <form enctype="multipart/form-data" method="post" asp-action="CreateEditSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.IdSchema)
                @Html.HiddenFor(model => model.DatumZmeny)
                @Html.HiddenFor(model => model.NazevSouboru)
                @Html.HiddenFor(model => model.VelikostSouboru)
                @Html.HiddenFor(model => model.TypSouboru)

                <div class="form-group mb-3">
                    <label asp-for="NazevSchematu" class="control-label"></label>
                    <input asp-for="NazevSchematu" class="form-control" />
                    <span asp-validation-for="NazevSchematu" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UploadedFile" class="control-label"></label>
                    <input asp-for="UploadedFile" type="file" class="form-control" />
                    <span asp-validation-for="UploadedFile" class="text-danger"></span>
                </div>

                <div class="form-group row m-1">
                    <input type="submit" value="Uložit změny" class="btn btn-primary col" />
                    <div class="col w-100"></div>
                    <a asp-action="Index" class="btn btn-secondary col align-content-end" style="margin-left:1rem">Zpět na seznam</a>
                </div>
            </form>
        </div>
    </div>
</div>