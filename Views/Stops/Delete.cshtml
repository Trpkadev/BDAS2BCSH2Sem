@model BCSH2BDAS2.Models.Zastavka
@{
    ViewData["Title"] = "Odstranit";
}

<h3>Opravdu chcete odstranit tuto zastávku?</h3>
<div>
    <dl class="row row-cols-2 m-1">
        <dt class="col-auto p-1">
            @Html.DisplayNameFor(model => model.Nazev)
        </dt>
        <dd class="col-auto p-1">
            @Html.DisplayFor(model => model.Nazev)
        </dd>
    </dl>
    <dl class="row row-cols-2 m-1">
        <dt class="col-auto p-1">
            @Html.DisplayNameFor(model => model.SouradniceX)
        </dt>
        <dd class="col-auto p-1">
            @Html.DisplayFor(model => model.SouradniceX)
        </dd>
    </dl>
    <dl class="row row-cols-2 m-1">
        <dt class="col-auto p-1">
            @Html.DisplayNameFor(model => model.SouradniceY)
        </dt>
        <dd class="col-auto p-1">
            @Html.DisplayFor(model => model.SouradniceY)
        </dd>
    </dl>
    <dl class="row row-cols-2 m-1">
        <dt class="col-auto p-1">
            @Html.DisplayNameFor(model => model.IdPasmo)
        </dt>
        <dd class="col-auto p-1">
            @Html.DisplayFor(model => model.IdPasmo)
        </dd>
    </dl>

    <form asp-action="DeleteSubmit" class="mb-3">
        <input type="submit" value="Odstranit" class="btn btn-danger" />
        <input type="hidden" asp-for="IdZastavka" />
    </form>
    <a asp-action="Index">Zpět na seznam</a>
</div>
