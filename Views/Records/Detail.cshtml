@using BCSH2BDAS2.Helpers
@model BCSH2BDAS2.Models.ZaznamTrasy
@{
    ViewData["Title"] = "Detail záznamu trasy";
}

<h1>@ViewData["Title"]</h1>

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.IdJizniRad)</dt>
                <dd class="col-auto p-1">
                    <a asp-controller="Timetables" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(Model.IdJizniRad)">Jízdní řád</a>
                </dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.NazevVozidla)</dt>
                <dd class="col-auto p-1">
                    <a asp-controller="Vehicles" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(Model.IdVozidlo)">@Html.DisplayFor(model => model.NazevVozidla)</a>
                </dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.CasPrijezdu)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.CasPrijezdu)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.CasOdjezdu)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.CasOdjezdu)</dd>
            </dl>
            @await Html.PartialAsync("DetailActionButtons", Model.IdZaznam)
        </div>
    </div>
</div>