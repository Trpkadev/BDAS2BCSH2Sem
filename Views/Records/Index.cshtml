@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.ZaznamTrasy>
@{
    ViewData["Title"] = "Seznam záznamů tras";
}

@await Html.PartialAsync("IndexCreateTitle")
<div class="table-responsive overflow-auto p-3">
    <table class="table text-nowrap w-auto m-auto">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdJizniRad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NazevVozidla)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CasPrijezdu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CasOdjezdu)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Connections" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdJizniRad)">Spoj</a>
                    </td>
                    <td>
                        <a asp-controller="Vehicles" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdVozidlo)">Vozidlo</a>
                    </td>
                    <td>
                        @item.CasPrijezdu.ToShortTimeString()
                    </td>
                    <td>
                        @item.CasOdjezdu.ToShortTimeString()
                    </td>
                    @await Html.PartialAsync("IndexActionButtons", item.IdZaznam)
                </tr>
            }
        </tbody>
    </table>
</div>