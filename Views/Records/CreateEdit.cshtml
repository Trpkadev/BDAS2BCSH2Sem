@model BCSH2BDAS2.Models.ZaznamTrasy
@{
    ViewData["Title"] = "Vytvořit/Upravit záznam trasy";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateEditSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.IdZaznam)

                <div class="form-group mb-3">
                    <label asp-for="IdJizniRad" class="control-label"></label>
                    @Html.DropDownListFor(model => model.IdJizniRad, ViewBag.JizdniRady as SelectList, "Vyberte jízdní řád", new { @class = "form-control" })
                    <span asp-validation-for="IdJizniRad" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NazevVozidla" class="control-label"></label>
                    @Html.DropDownListFor(model => model.IdVozidlo, ViewBag.Vozidla as SelectList, "Vyberte vozidlo", new { @class = "form-control" })
                    <span asp-validation-for="IdVozidlo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CasPrijezdu" class="control-label"></label>
                    <input asp-for="CasPrijezdu" class="form-control" />
                    <span asp-validation-for="CasPrijezdu" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CasOdjezdu" class="control-label"></label>
                    <input asp-for="CasOdjezdu" class="form-control" />
                    <span asp-validation-for="CasOdjezdu" class="text-danger"></span>
                </div>

                <div class="form-group row m-1">
                    <input type="submit" value="Uložit změny" class="btn btn-primary col" />
                    <div class="col w-100"></div>
                    <a asp-action="Index" class="btn btn-secondary col align-content-end" style="margin-left:1rem">Zpět na seznam</a>
                </div>
            </form>
        </div>
    </div>
</div>