@model BCSH2BDAS2.Models.Model
@{
    ViewData["Title"] = "Vytvořit/Upravit model";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateEditSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdModel" />

                <div class="form-group mb-3">
                    <label asp-for="Nazev" class="control-label"></label>
                    <input asp-for="Nazev" class="form-control" />
                    <span asp-validation-for="Nazev" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ZnackaNazev" class="control-label"></label>
                    @Html.DropDownList("IdZnacka", (SelectList)ViewBag.Znacky, new { @class = "form-control" })
                    <span asp-validation-for="IdZnacka" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TypVozidlaNazev" class="control-label"></label>
                    @Html.DropDownList("IdTypVozidla", (SelectList)ViewBag.TypyVozidel, new { @class = "form-control" })
                    <span asp-validation-for="IdTypVozidla" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="JeNizkopodlazni" class="control-label"></label>
                    <input asp-for="JeNizkopodlazni" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="JeNizkopodlazni" class="text-danger"></span>
                </div>

                <div class="form-group row m-1">
                    <input type="submit" value="Uložit změny" class="btn btn-primary col" />
                    <div class="col w-100"></div>
                    <a asp-action="Index" class="btn btn-secondary col align-content-end" style="margin-left:1rem">Zpět na seznam</a>
                </div>
            </form>
        </div>
    </div>
</div>