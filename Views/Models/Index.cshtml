@using BCSH2BDAS2.Helpers
@model IEnumerable<BCSH2BDAS2.Models.Model>

@{
    ViewData["Title"] = "Seznam modelů";
}

<div class="d-flex justify-content-between mb-3">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="CreateEdit" class="btn btn-primary">Vytvořit</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZnackaNazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypVozidlaNazev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JeNizkopodlazni)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(_ => item.Nazev)
                </td>
                <td>
                     <a asp-controller="Brands" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdZnacka)">@Html.DisplayFor(_ => item.ZnackaNazev)</a>
                </td>
                <td>
                     <a asp-controller="Types" asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdTypVozidla)">@Html.DisplayFor(_ => item.TypVozidlaNazev)</a>
                </td>
                <td>
                    @Html.DisplayFor(_ => item.JeNizkopodlazni)
                </td>
                <td class="d-flex">
                    <a asp-action="CreateEdit" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdModel)" class="btn btn-secondary">Upravit</a>
                    <a asp-action="Detail" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdModel)" class="btn btn-secondary">Detail</a>
                    <a asp-action="Delete" asp-route-encryptedId="@OurCryptography.Instance.EncryptId(item.IdModel)" class="btn btn-secondary">Odstranit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
