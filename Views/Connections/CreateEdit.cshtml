@model BCSH2BDAS2.Models.Spoj
@{
    ViewData["Title"] = "Vytvořit/Upravit spoj";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="CreateEditSubmit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.IdSpoj)

                <div class="form-group mb-3">
                    <label asp-for="CisloLinky" class="control-label"></label>
                    @Html.DropDownListFor(model => model.IdLinka, ViewBag.Linky as SelectList, new { @class = "form-control" })
                    <span asp-validation-for="IdLinka" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Cislo" class="control-label"></label>
                    <input asp-for="Cislo" class="form-control" />
                    <span asp-validation-for="Cislo" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <label asp-for="JedeVSobotu" class="form-check-label"></label>
                    <input class="form-check-input" asp-for="JedeVSobotu" />
                </div>

                <div class="form-group form-check mb-3">
                    <label asp-for="JedeVNedeli" class="form-check-label"></label>
                    <input class="form-check-input" asp-for="JedeVNedeli" />
                </div>

                <div class="form-group form-check mb-3">
                    <label asp-for="JedeVeVsedniDen" class="form-check-label"></label>
                    <input class="form-check-input" asp-for="JedeVeVsedniDen" />
                </div>

                <div class="form-group form-check mb-3">
                    <label asp-for="GarantovaneNizkopodlazni" class="form-check-label"></label>
                    <input class="form-check-input" asp-for="GarantovaneNizkopodlazni" />
                </div>

                <div class="form-group row m-1">
                    <input type="submit" value="Uložit změny" class="btn btn-primary col" />
                    <div class="col w-100"></div>
                    <a asp-action="Index" class="btn btn-secondary col align-content-end" style="margin-left:1rem">Zpět na seznam</a>
                </div>
            </form>
        </div>
    </div>
</div>