@using BCSH2BDAS2.Helpers
@model BCSH2BDAS2.Models.Spoj
@{
    ViewData["Title"] = "Detail spoje";
}

<h1>@ViewData["Title"]</h1>

<div class="justify-content-center m-auto" style="width:fit-content">
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.CisloLinky)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.CisloLinky)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.Cislo)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.Cislo)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.JedeVSobotu)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.JedeVSobotu)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.JedeVNedeli)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.JedeVNedeli)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.JedeVeVsedniDen)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.JedeVeVsedniDen)</dd>
            </dl>

            <dl class="row row-cols-2 m-1">
                <dt class="col-auto p-1">@Html.DisplayNameFor(model => model.GarantovaneNizkopodlazni)</dt>
                <dd class="col-auto p-1">@Html.DisplayFor(model => model.GarantovaneNizkopodlazni)</dd>
            </dl>
            @await Html.PartialAsync("DetailActionButtons", Model.IdSpoj)
        </div>
    </div>
</div>